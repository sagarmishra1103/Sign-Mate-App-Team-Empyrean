<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample3">

    <TextView
        android:id="@+id/su_tv"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginBottom="364dp"
        android:background="@drawable/text_border"
        android:paddingTop="15dp"
        android:text="Enter the Details"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_img1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Password :"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Name :"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_tv" />

    <TextView
        android:id="@+id/Age_tv"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Age :"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Username_tv"
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Username :"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Age_tv"
        app:layout_constraintVertical_bias="0.018" />


    <TextView
        android:id="@+id/su_tv1"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:background="@drawable/text_border"
        android:paddingTop="15dp"
        android:text="Create Your Account"
        android:textAlignment="center"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/su_img1"
        android:layout_width="138dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_tv1"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/account_icon"
        tools:srcCompat="@drawable/account_icon" />

    <Button
        android:id="@+id/signup_b1"
        android:layout_marginTop="40dp"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:text="Sign Up"
        android:background="@drawable/text_border"
        android:textAllCaps="true"
        app:backgroundTint="#BA27A09C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Password"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="248dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/su_tv"
        app:layout_constraintVertical_bias="0.016" />

    <EditText
        android:id="@+id/et_Age"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Age_tv"
        app:layout_constraintTop_toBottomOf="@+id/et_Name"
        app:layout_constraintVertical_bias="0.019" />

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="217dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/password_tv"
        app:layout_constraintTop_toBottomOf="@+id/et_Username"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Username_tv"
        app:layout_constraintTop_toBottomOf="@+id/et_Age"
        app:layout_constraintVertical_bias="0.014" />

</androidx.constraintlayout.widget.ConstraintLayout>